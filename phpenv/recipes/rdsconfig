node[:deploy].each do |application, deploy|

  template "#{deploy[:deploy_to]}/current/fuel/app/config/db.php" do
    source "db.php.erb"
    mode 0660
    group deploy[:group]

    if platform?("ubuntu")
      owner "www-data"
    elsif platform?("amazon")
      owner "apache"
    end

    variables(
      :host => (node[:database][:host] rescue nil),
      :user => (node[:database][:username] rescue nil),
      :password => (node[:database][:password] rescue nil),
      :dbname => (node[:database][:dbname] rescue nil),
      :port => (node[:database][:port] rescue nil)
    )

   only_if do
     File.directory?("#{deploy[:deploy_to]}/current/fuel/app/config")
   end
  end
end